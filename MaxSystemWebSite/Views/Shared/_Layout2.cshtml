    <script>
        $(function () {
            bsContainerAdjust('.main-resizable-right');
            bsContainerAdjust('.resizable-listing');

            $(window).on('resize', function(){
                bsContainerAdjust('.main-resizable-right');
                bsContainerAdjust('.resizable-listing');
            });

            const $m_resizer = $('.main-resizer');
            const $m_left = $('.main-resizable-left');
            const $m_right = $('.main-resizable-right');
            let m_isDragging = false;

            $m_resizer.on('mousedown', function (e) {
                m_isDragging = true;
                $('body').css('cursor', 'ew-resize');
            });

            $(document).on('mousemove', function (e) {
                if (!m_isDragging) return;

                const containerOffsetLeft = $('.main-resizable-container').offset().left;
                const newWidth = e.pageX - containerOffsetLeft;

                $m_left.css('width', newWidth);

                bsContainerAdjust('.main-resizable-right');
                bsContainerAdjust('.resizable-listing');
            });

            $(document).on('mouseup', function () {
                m_isDragging = false;
                $('body').css('cursor', 'default');
            });


            const $resizer = $('.resizer');
            const $left = $('.resizable-menu');
            const $right = $('.resizable-listing');
            let isDragging = false;

            $resizer.on('mousedown', function (e) {
                isDragging = true;
                $('body').css('cursor', 'ew-resize');
            });

            $(document).on('mousemove', function (e) {
                if (!isDragging) return;

                const containerOffsetLeft = $('.sub-resizable-container').offset().left;
                const newWidth = e.pageX - containerOffsetLeft;

                $left.css('width', newWidth);

                bsContainerAdjust('.resizable-listing');
            });

            $(document).on('mouseup', function () {
                isDragging = false;
                $('body').css('cursor', 'default');
            });
        });

        function bsContainerAdjust(container){
            var cwidth = $(container).innerWidth();
            var bsClass = "boostrap-sm";
            if (cwidth > 1200) {
                bsClass = "boostrap-xl";
            } else if (cwidth > 992) {
                bsClass = "boostrap-lg";
            } else if (cwidth > 768) {
                bsClass = "boostrap-md";
            } else if (cwidth > 576) {
                bsClass = "boostrap-sm";
            }

            $(container).removeClass("boostrap-sm").removeClass("boostrap-md").removeClass("boostrap-lg").removeClass("boostrap-xl");
            $(container).addClass(bsClass);
        }
    </script>
