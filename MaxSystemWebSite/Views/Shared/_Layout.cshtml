@{
    var username = HttpContextAccessor.HttpContext.Request.Cookies["NAME"];
    var profileImage = HttpContextAccessor.HttpContext.Request.Cookies["PROFILE_IMAGE"];
    var useremail = HttpContextAccessor.HttpContext.Request.Cookies["EMAIL"];
    var userID = HttpContextAccessor.HttpContext.Request.Cookies["USER_ID"];
    var employeeID = HttpContextAccessor.HttpContext.Request.Cookies["ID_MM_COMPANY"];
    var companyName = HttpContextAccessor.HttpContext.Request.Cookies["MM_COMPANY_NAME"];
    var workNO = HttpContextAccessor.HttpContext.Request.Cookies["WORK_NO"];
    var authenticationType = HttpContextAccessor.HttpContext.Request.Cookies["AUTH_TYPE"];
    var solat_zone = HttpContextAccessor.HttpContext.Request.Cookies["SOLAT_ZONE"];   
    var code = HttpContextAccessor.HttpContext.Request.Cookies["COMPANY_CODE"];
    var level = HttpContextAccessor.HttpContext.Request.Cookies["ACCESS_LEVEL"];
}

<body>
    <header class="navbar navbar-dark navbar-expand-lg shadow tr-navbar">
        <div class="container-fluid">
            <a href="" class="col ">
                <img class="p-0 text-white text-decoration-none" src="~/Images/Max_logo.png" style="width:45px; object-fit: contain;" /> <span class="text-white text-decoration-none">@Configuration["ProjectName"].ToString().ToUpper() - @companyName</span>
                <input type="hidden" value="@useremail" id="txtUserEmail" />
                <input type="hidden" value="@userID" id="txtUserID" />
                <input type="hidden" value="@employeeID" id="txtUserEmployeeID" />
                <input type="hidden" value="@workNO" id="txtUserWorkNO" />
                <input type="hidden" value="@username" id="txtUserName" />
                <input type="hidden" value="@solat_zone" id="txtsolatZone" />
                <input type="hidden" value="@code" id="txtComCodeTMP" />
                <input type="hidden" value="@level" id="txtLvl" />
            </a>
           
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-lg-none" id="sidebar-list-mobile">
                    @*
                    <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Dropdown
                    </a>
