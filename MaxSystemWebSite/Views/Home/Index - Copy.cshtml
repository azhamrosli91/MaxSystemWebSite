<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginModalLabel">Sign In</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="loginForm" method="post" action="/Home/Login">
                    @Html.AntiForgeryToken() <!-- Add this line -->
                    <div class="mb-3">
                        <label for="loginEmail" class="form-label">Email address</label>
                        @Html.TextBoxFor(a => a.LOGIN_ID, new { placeholder = "Enter email", id = "loginEmail", @class = "form-control remove-left-border login-txt textbox keyboard", @value = "", type = "email" })
                        <span class="text-danger" id="emailError"></span>
                    </div>
                    <div class="mb-3">
                        <label for="loginPassword" class="form-label">Password</label>
                        @Html.TextBoxFor(a => a.PASSWORD, new { placeholder = "Password", id = "loginPassword", @class = "form-control remove-left-border login-txt textbox keyboard", @value = "", type = "password" })
                        <span class="text-danger" id="passwordError"></span>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Sign In</button>
                </form>
                <div class="text-center mt-3">
                    <a href="/Account/ForgotPassword" id="forgotPasswordLink">Forgot Password?</a> <!-- Forgot Password link -->
                </div>
            </div>
            <div class="modal-footer">
                <p class="text-center w-100">Don't have an account? <a href="/Home/RegisterUser">Sign Up</a></p>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
    $('#loginForm').on('submit', function (event) {
        event.preventDefault(); // Prevent default form submission

        // Clear previous error messages
        $('#emailError').text('');
        $('#passwordError').text('');

        // Get form values
        const email = $('#loginEmail').val().trim();
        const password = $('#loginPassword').val().trim();

        // Validation logic
        let isValid = true;

        if (!email) {
            $('#emailError').text('Email is required.');
            isValid = false;
        } else if (!/\S+@@\S+\.\S+/.test(email)) {
            $('#emailError').text('Email is invalid.');
            isValid = false;
        }

        if (!password) {
            $('#passwordError').text('Password is required.');
            isValid = false;
        }

        // If form is valid, submit via AJAX
        if (isValid) {
            const token = $('input[name="__RequestVerificationToken"]').val(); // Get anti-forgery token

            $.ajax({
                url: '/Home/Login', // URL to submit the form
                type: 'POST',
                headers: {
                    'RequestVerificationToken': token // Include anti-forgery token in headers
                },
                data: $(this).serialize(), // Serialize form data
                success: function (response) {
                    if (response.success) {
                        $.ajax({
                            type: "get",
                            url: "/Home/GetSidebar",
                            datatype: "json",
                            traditional: true,
                            success: function (data) {
                                localStorage.setItem("Sidebar", data);
                                window.location.href = response.redirectUrl; // Redirect on success
                            },
                            error: function (xhr, status, error) {
                                console.error('Error:', error);
                                alert('An error occurred while processing your request.');
                            }
                        });
                       
                    } else {
                        // Display server-side validation errors
                        console.log(response);
                        $('#passwordError').text("Invalid email or password");
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                    alert('An error occurred while processing your request.');
                }
            });
        }
    });
});
</script>