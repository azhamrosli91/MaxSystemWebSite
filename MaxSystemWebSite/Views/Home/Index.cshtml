                chbot_sendQuestion(data_msg);
            });

            function chbot_sendQuestion(question) {
                var cont = true;
                var msg = "";

                if (chbot_process == 1) {
                    cont = false;
                    msg = "Previous response is ongoing. Please wait.";
                }
                if (cont && question.trim() === "") {
                    cont = false;
                    msg = "Message cannot be empty.";
                }

                if (cont) {
                    chbot_process = 1;

                    chbot_rmvSuggest();
                    chbot_addMessage('msg-out', { msg: question });
                    chbot_loading();

                    // Get previous messages
                    var messages = [];

                    $("#chbot_conversation .chbot-message").each(function () {
                        var isIn = $(this).hasClass("in");
                        var content = $(this).find(".chbot-message-content").text().trim();

                        if (content !== "") {
                            messages.push({
                                role: isIn ? "assistant" : "user",
                                content: content
                            });
                        }
                    });

                    // Add current question
                    messages.push({ role: "user", content: question });

                    // Call ASP.NET Core controller
                    $.ajax({
                        url: "/Home/Chatbot",
                        method: "POST",
                        contentType: "application/json",
                        data: JSON.stringify({ messages: messages }),
                        success: function (response) {
                            chbot_loading(false);
                            chbot_addMessage('msg-in', { msg: response });
                            test_addSuggest();
                            chbot_process = 0;
                        },
                        error: function () {
                            chbot_loading(false);
                            chbot_addMessage('msg-in', { msg: "Sorry, something went wrong." });
                            chbot_process = 0;
                        }
                    });

                } else {
                    toastError("Invalid Action", msg);
                }
            }

