                    case 'msg-in':
                        $('#chbot_conversation').append(`
                            <div class="chbot-message in">
                                <div class="chbot-message-content">${data.msg}</div>
                            </div>
                        `);
                        break;
                    case 'msg-out':
                        $('#chbot_conversation').append(`
                            <div class="chbot-message out">
                                <div class="chbot-message-content">${data.msg}</div>
                            </div>
                        `);
                        break;
                    case 'suggest':
                        var suggest_item = '';
                        for (var i = 0; i < data.length; i++) {
                            var suggest = data[i];
                            suggest_item += `<div class="chbot-suggest-item" data-msg="${suggest.msg}">${suggest.msg}</div>`;
                        }
                        $('#chbot_conversation').append(`
                            <div class="chbot-message chbot-message-suggest">
                                <div class="chbot-suggest">${suggest_item}</div>
                            </div>
                        `);
                        $('.chbot-suggest .chbot-suggest-item').each(function (index) {
                            var delay = 0.2 * index; // Adjust the delay as needed
                            $(this)[0].offsetHeight;
                            $(this).css('transition-delay', delay + 's');
                            $(this).addClass('cbs-fade-in');
                        });
                        break;
                    default:
                        break;
                }
                $('#chbot_conversation').scrollTop($('#chbot_conversation')[0].scrollHeight);
            }

            $(document).on('click', '#chbot_conversation .chbot-suggest-item', function (e) {
                var data_msg = $(this).data('msg');
