    <script>
        let ms_calendar;
        var holiday_data = [];
        var myDropzone;

        $(document).ready(function(){
            fetchLeaveData();

            $('#btnRefresh').click(function(){
                fetchLeaveData();
            });

            // Initialize popover when the button is clicked or hovered
            $('#btnLegend').popover({
